[
  {
    "name": "api-container",
    "image": "827438519178.dkr.ecr.ap-northeast-1.amazonaws.com/lifree-api:latest",
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "api",
        "awslogs-group": "/ecs/api"
      }
    },
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 3000,
        "hostPort": 3000
      }
    ],
    "command": [
      "bundle", "exec", "rails", "s", "-b", "0.0.0.0"
    ],
    "environment": [
      {
        "name": "RAILS_ENV",
        "value": "production"
      },
      {
        "name": "WORKDIR",
        "value": "app"
      },
      {
        "name": "HOST",
        "value": "0.0.0.0"
      },
      {
        "name": "PORT",
        "value": "3000"
      }
    ],
    "secrets": [
      {
        "name": "RAILS_MASTER_KEY",
        "valueFrom": "rails-master-key"
      },
      {
        "name": "AWS_ACCESS_KEY_ID",
        "valueFrom": "access-key-id"
      },
      {
        "name": "AWS_SECRET_ACCESS_KEY",
        "valueFrom": "secret-access-key"
      },
      {
        "name": "DB_HOST",
        "valueFrom": "db-host"
      },
      {
        "name": "DB_NAME",
        "valueFrom": "db-name"
      },
      {
        "name": "DB_USERNAME",
        "valueFrom": "db-username"
      },
      {
        "name": "DB_PASSWORD",
        "valueFrom": "db-password"
      }
    ]
  }
]